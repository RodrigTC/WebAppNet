@{
}
<html lang="es">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/estilos4.css" type="text/css" media="screen">
    <meta charset="UTF-8">
</head>
<body>

    <div class="login-box">

        <h1>Registro de nuevo usuario </h1>
        <form asp-controller="Usuario" asp-action="GrabarUsuario" method="post">
            <div class="form-group">
                <label >Nombre:</label><br />
                <input asp-for="Nombreu" type="text" id="nombre" >
                <span asp-validation-for="Nombreu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Apellidos:</label><br />
                <input asp-for="Apellidou" type="text" id="apellido">
                <span asp-validation-for="Apellidou" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Correo:</label><br />
                <input asp-for="Correou" type="email" id="correo">
                <span asp-validation-for="Correou" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Fecha de Nacimiento:</label>
                <input asp-for="Nacimiento" type="date" id="fechanacimiento" value="2023-06-30"
                       min="1923-01-01" max="2023-12-31">

            </div>
            <div class="form-group">
                <label >Genero:</label><br />
                <select asp-for="Genero" id="genero">
                    <option selected>Masculino</option>
                    <option>Femenino</option>
                    <option>No binario</option>
                </select>
            </div>
            <div class="form-group">
                <label >Telefono:</label><br />
                <input asp-for="Telefono" type="text" id="telefono">
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Contraseña:</label><br />
                <input asp-for="Contraseñau" type="password" id="contraseña">
                <span asp-validation-for="Contraseñau" class="text-danger"></span>
            </div>
            
            <div class="boton">
                <input type="submit" value="Acceder">
            </div>
        
        </form>
    </div>

</body>
</html>