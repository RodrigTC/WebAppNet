@{
}
@model IEnumerable<TRABAJO_FINAL.Models.Citum>

<html lang="es">
    <head></head>
    <body>

        <h3>
            Si desea cancelar una cita seleccione "cancelar":</h3>
            <table class="table">
                <tr>
                    <td>Doctor</td>
                    <td>Especialidad</td>
                    <td>Hora</td>
                    <td>Dia</td>
                    <td>Costo</td>
                    <td>Cancelar</td>
                </tr>
                <tbody>
        @foreach (var item in Model)
        {
                        <tr>
                            <td>@item.NomDoctor</td>
                            <td>@item.NomEspecialidad</td>
                            <td>@item.Horario</td>
                            <td>@item.Dia</td>
                            <td>@item.Costo</td>
                            <td><a asp-controller="Inicio" asp-action="CancelarCita" asp-route-id="@item.IdCita">Eliminar cita</a></td>
                        </tr>
        }
                </tbody>
            </table>
 
    </body>
    
</html>