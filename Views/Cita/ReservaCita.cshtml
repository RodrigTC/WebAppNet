@model IEnumerable<TRABAJO_FINAL.Models.Especialidad>

<html lang="es">
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/estilos3.css" type="text/css" media="screen" >
        <meta charset="UTF-8">
    </head>
    <body>
        
        <div class="login-box">

        <h1>Registro de citas </h1>
            <div class="form-group">
                <label >Nombre: @ViewData["nomb"] @ViewData["apel"]</label>
                
            </div>
           
            <div class="form-group">
                <label >Especialidad:</label>
                @foreach (var item in Model)
                {
                    <button class="my-button">
                    <a asp-controller="Cita" asp-action="ReCiDoctor" asp-route-id="@item.IdEspecialidad" />@item.Descripcion</button>
                }
            </div>


        </div>
        
    </body>
</html>