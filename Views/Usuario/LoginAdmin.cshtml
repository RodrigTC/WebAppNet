@{
}
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />

    <Link rel=StyleSheet href="~/css/estilos.css" type="text/css" media=screen>
    <meta charset="utf-8">
    <title>Login</title>
</head>
<body>
    <div class="login-box">

        <img src="..\img\logoAdmin.png" class="avatar" alt="clini image" />
        <h1>Ingresar</h1>
        <form asp-controller="Usuario" asp-action="ValidarAdmin" method="post">

            <label>Correo</label>
            <input type="email" asp-for="Correou" placeholder="Ingrese su Correo">
            <span asp-validation-for="Correou" class="text-danger"></span>

            <label>Contraseña</label>
            <input type="password" asp-for="Contraseñau" placeholder="Ingrese su Contraseña">
            <span asp-validation-for="Contraseñau" class="text-danger"></span>

            <input type="submit" value="Ingresar">
        </form>
    </div>

</body>
</html>