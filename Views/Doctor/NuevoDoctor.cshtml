@{
}
<html lang="es">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/estilos4.css" type="text/css" media="screen">
    <meta charset="UTF-8">
</head>
<body>

    <div class="login-box">

        <h1>Registro de nuevo doctor </h1>
        <form asp-controller="Doctor" asp-action="GrabarDoctor" method="post">
            <div class="form-group">
                <label >Nombre:</label><br />
                <input asp-for="NombreD" type="text" id="nombre" >
                <span asp-validation-for="NombreD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Apellidos:</label><br />
                <input asp-for="ApellidoD" type="text" id="apellido">
                <span asp-validation-for="ApellidoD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Correo:</label><br />
                <input asp-for="CorreoD" type="email" id="correo">
                <span asp-validation-for="CorreoD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Contraseña:</label><br />
                <input  asp-for="ContraseñaD" type="password" id="contraseña">
                <span asp-validation-for="ContraseñaD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label >Especialidad:</label><br />
                <select asp-for="IdEspecialidad" id="especialidad">
                    <option value="1" selected>1. Cardiología</option>
                    <option value="2">2. Cirugía General</option>
                    <option value="3">3. Cirugía Plástica y Reconstructiva</option>
                    <option value="4">4. Dermatología</option>
                    <option value="5">5. Ginecología y Obstetricia</option>
                    <option value="6">6. Medicina General</option>
                    <option value="7">7. Neurología</option>
                    <option value="8">8. Oftalmologia</option>
                    <option value="9">9. Otorrinolaringología</option>
                    <option value="10">10. Pediatría</option>
                    <option value="11">11. Psiquiatría</option>
                    <option value="12">12. Radiología</option>
                    <option value="13">13. Traumatología</option>
                </select>
            </div>
            
            <div class="boton">
                <input type="submit" value="Grabar">
            </div>
        
        </form>
    </div>

</body>
</html>